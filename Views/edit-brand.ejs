    <div class="edit-brand-container">
        <h1>Edit Brand</h1>
        <form action="/admin/edit-brand/<%= brand._id %>" method="POST" class="edit-brand-form">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="<%= brand.name %>" required class="form-input"><br>
            </div>
            <button type="submit" class="submit-button">Update Brand</button>
        </form>
    </div>

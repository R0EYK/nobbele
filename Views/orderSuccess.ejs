<!-- orderSuccess.ejs -->
<html>
<head>
    <title>Order Success</title>
    <!-- Add any necessary CSS links or stylesheets -->
    <link rel="stylesheet" href="/css/orderSuccess.css">
    <script src="/js/navbar.js"></script>

</head>
<body>
    <div class="topMenu"> 
        <a href="/">
            <img src="/Images/MainLogo.jpg" alt="mainLogo">
        </a>
        <ul>
            <li><a href="/products/Bags">BAGS</a></li>
            <li><a href="/products/Wallets">WALLETS</a></li>
            <li><a href="/products/Accessories">ACCESSORIES</a></li>
            <li><a href="/products/Jewelry">JEWELRY</a></li>
            <li class="dropdown">
                <a href="/brands" class="dropbtn">BRANDS</a>
                <ul class="dropdown-content"></ul>
            </li>
            <li><a href="/products/sale">SALE</a></li>
        </ul>
        <div class="emojis"> 
            <div class="search-container">
                <svg id="searchIcon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                </svg>
                <form id="searchForm" action="/products/search" method="get" style="display: none;">
                    <input type="text" placeholder="Search products..." name="q">
                    <button type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                        </svg>
                    </button>
                </form>
            </div>
            <div class="profile-emoji">
                <a href="<%= loggedIn ? '/profile' : '/login' %>">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
                    </svg>
                    <% if (loggedIn) { %>
                        <span class="status-dot logged-in"></span> <!-- Green dot -->
                    <% } else { %>
                        <span class="status-dot not-logged-in"></span> <!-- Red dot -->
                    <% } %>
                </a>
                <% if (loggedIn) { %>
                    <div class="dropdown-profile">
                        <ul>
                            <li><a href="/orders">Your Orders</a></li>
                            <li><a href="/changePassword">Change Password</a></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>
                <% } %>
            </div>
            <div class="cart-emoji">
                <a href="/cart">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag" viewBox="0 0 16 16">
                        <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z"/>
                    </svg>
                </a>
            </div>
        </div>
    </div>

    
    <div class="container">
        <h1>Your Order was Successful!</h1>
        <div class="order-details">
            <h2>Order Details</h2>
            <ul>
                <% order.products.forEach(product => { %>
                    <li>
                        <p><strong>Product Name:</strong> <%= product.productId.name %></p>
                        <p><strong>Quantity:</strong> <%= product.quantity %></p>
                        <p><strong>Price:</strong> $<%= product.productId.price?.toFixed(2) %></p>
                    </li>
                <% }) %>
            </ul>
            <p><strong>Total Price:</strong> $<%= order.totalPrice?.toFixed(2) %></p>
            <p><strong>Shipping Address:</strong></p>
            <p><%= order.shippingAddress.street %>, <%= order.shippingAddress.city %>, <%= order.shippingAddress.country %> - <%= order.shippingAddress.zipCode %></p>
            <p><strong>Payment Details:</strong></p>
            <p>Credit Card: ****-****-****-<%= order.paymentDetails.creditCardNumber.slice(-4) %></p>
            <p>Expiry: <%= order.paymentDetails.expiryMonth %>/<%= order.paymentDetails.expiryYear %></p>
        </div>
    </div>
</body>
</html>

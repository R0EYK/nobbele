<form action="/checkout" method="POST">
    <input type="text" name="country" required placeholder="Country" />
    <input type="text" name="city" required placeholder="City" />
    <input type="text" name="street" required placeholder="Street" />
    <input type="text" name="houseNumber" required placeholder="House Number" />
    <input type="text" name="zipCode" required placeholder="Zip Code" />

    <input type="text" name="creditCardNumber" required placeholder="Credit Card Number" />
    
    <select name="expiryMonth" required>
        <option value="">Select Month</option>
        <option value="01">January</option>
        <option value="02">February</option>
        <option value="03">March</option>
        <option value="04">April</option>
        <option value="05">May</option>
        <option value="06">June</option>
        <option value="07">July</option>
        <option value="08">August</option>
        <option value="09">September</option>
        <option value="10">October</option>
        <option value="11">November</option>
        <option value="12">December</option>
    </select>

    <select name="expiryYear" required>
        <option value="">Select Year</option>
        <option value="2024">2024</option>
        <option value="2025">2025</option>
        <option value="2026">2026</option>
        <option value="2027">2027</option>
        <option value="2028">2028</option>
    </select>

    <input type="text" name="cvv" required placeholder="CVV" />
    <input type="text" name="idNumber" required placeholder="ID Number" />

    <button type="submit">Pay Now</button>
</form>
